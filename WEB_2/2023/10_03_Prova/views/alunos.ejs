<!-- views/alunos.ejs -->

<%- include('partials/header') %>
   
<%- include('partials/navbar') %>

    <h1>Lista de Alunos</h1>

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Idade</th>
            </tr>
        </thead>
        <tbody>
            <% alunos.forEach(aluno => { %>
                <tr>
                    <td><%= aluno.id %></td>
                    <td><%= aluno.nome %></td>
                    <td><%= aluno.idade %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>

    <h2>Adicionar Novo Aluno</h2>
    <form action="/api/alunos" method="POST">
        <label for="nome">Nome:</label>
        <input type="text" name="nome" required>
        <br>
        <label for="idade">Idade:</label>
        <input type="number" name="idade" required>
        <br>
        <button type="submit">Adicionar Aluno</button>
    </form>

    <h2>Obter Informações de um Aluno</h2>
    <form action="/api/alunos" method="GET">
        <label for="alunoId">ID do Aluno:</label>
        <input type="number" name="alunoId" required>
        <br>
        <button type="submit">Obter Informações do Aluno</button>
    </form>

    <h2>Atualizar Informações de um Aluno</h2>
    <form action="/api/alunos/:id" method="PUT">
        <label for="alunoIdToUpdate">ID do Aluno:</label>
        <input type="number" name="alunoIdToUpdate" required>
        <br>
        <label for="nome">Novo Nome:</label>
        <input type="text" name="nome" required>
        <br>
        <label for="idade">Nova Idade:</label>
        <input type="number" name="idade" required>
        <br>
        <button type="submit">Atualizar Informações</button>
    </form>

    <h2>Excluir um Aluno</h2>
    <form action="/api/alunos/:id" method="DELETE">
        <label for="alunoIdToDelete">ID do Aluno a Excluir:</label>
        <input type="number" name="alunoIdToDelete" required>
        <br>
        <button type="submit">Excluir Aluno</button>
    </form>

<%- include('partials/footer') %>